<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="iesoft" transaction-type="RESOURCE_LOCAL">

		<class>Negocio.Departamento.Imp.Departamento</class>
		<class>Negocio.Empleado.Imp.Empleado</class>
		<class>Negocio.Empleado.Imp.EmpleadoCompleto</class>
		<class>Negocio.Empleado.Imp.EmpleadoParcial</class>
		<class>Negocio.Planta.Imp.RPlantaDepartamentoId</class>
		<class>Negocio.Planta.Imp.Planta</class>
		<class>Negocio.Planta.Imp.RPlantaDepartamento</class>
	
		<validation-mode>NONE</validation-mode>
		<properties>

		<property name="eclipselink.cache.shared.default" value="false"/>
		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/iesoft"/>
		<property name="javax.persistence.jdbc.user" value="root"/>
		<property name="javax.persistence.jdbc.password" value=""/>
		<!-- enable this EclipseLink property to see SQL and other logging -->
		<!-- property name="eclipselink.logging.level" value="FINE"/ -->
		<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
		<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/> 
		<property name="eclipselink.ddl-generation.output-mode" value="both"/>
		</properties>
		</persistence-unit>
		</persistence>


